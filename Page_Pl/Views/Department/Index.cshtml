@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}
@if (TempData["Message"] is not null)
{
    <div id="alertContainer">
        <div class="alert alert-success" role="alert">
				@TempData["Message"]
        </div>
    </div>
	
}


<a asp-action="Create" class="btn btn-primary">Create New Department</a>
@if (Model.Count() > 0) {

    <div class="m-2">
        <form asp-action="Index" class="row offset-2">
            <div class="col-8">
                <input class="form-control" type="text" name="Search" placeholder="Department Name" />
            </div>
            <div col-4>
                <input type="submit" value="Search" class="btn btn-success" />
            </div>
        </form>
    </div>

    <h1>All Department</h1>
    <br />
    <table class="table table-hover mt-4">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D => D.Code)</td>
                <td>@Html.DisplayNameFor(D => D.Name)</td>
                <td>@Html.DisplayNameFor(D => D.Created)</td>
                <td>Details</td>
                <td>Updata</td>
                <td>Delete</td>
            </tr>
        </thead>

        <tbody>
            @foreach(var dep in Model)
            {
                <tr>
                    <td>@dep.Code</td>
                    <td>@dep.Name</td>
                    <td>@dep.Created</td>
                    <partial name="_ButtomsPartialView" model="@dep.Id" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning"> 
        <h1>No Department Found</h1>
    </div>
}
@section TimeoutOfMessagesucess{
    <script>
        setTimeout(function () {
            $('#alertContainer').fadeOut('fast');
        }, 15000);
    </script>
}

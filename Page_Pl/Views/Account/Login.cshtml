@model LoginModelView
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/Auth_Layout.cshtml";
}
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login">
		
			<input class="text" asp-for="Email" placeholder="You Email " required="">
			<span asp-validation-for="Email" class="text-danger"></span>
			<br />

			<input class="text" asp-for="Password" placeholder="You Password" required="">
			<span asp-validation-for="Password" class="text-danger"></span>
			<br />

			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox" required="">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SignIn">
		</form>
		<p>Don't have an Account? <a asp-action="Register">Sign Up Now !</a></p>
	</div>
</div>
@section ValidationScriptsPartial {
	<partial name="_ValidationScriptsPartial" />
}

@model ApplicationUserView
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/Auth_Layout.cshtml";
}
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Register" >
			<input class="text" asp-for="FName" placeholder="You Frist Name" required="">
			<span asp-validation-for="FName" class="text-danger"></span>
			<br />
			<input class="text" asp-for="LName" placeholder="You Last Name" required="">
			<span asp-validation-for="LName" class="text-danger"></span>
			<br />

			<input class="text" asp-for="Email" placeholder="You Email " required="">
			<span asp-validation-for="Email" class="text-danger"></span>
			<br />

			<input class="text" asp-for="Password" placeholder="You Password" required="">
			<span asp-validation-for="Password" class="text-danger"></span>
			<br />

			<input class="text" asp-for="ConfirmPass" placeholder="You Confirm Password" required="">
			<span asp-validation-for="ConfirmPass" class="text-danger"></span>
			<br />

			 
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Don't have an Account? <a asp-action="Login"> Login Now!</a></p>
	</div>
</div>
@section ValidationScriptsPartial{
	<partial name="_ValidationScriptsPartial" />
}